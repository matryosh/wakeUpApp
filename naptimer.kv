<NapButton@Button>:
    background_normal: "images/button_normal.png"
    background_down: "images/button_down.png"
    border: (2, 2, 2, 2)

Timer:

<Timer>:
    orientation: "vertical"
    nap_time: nap_minutes
    nap: nap_label
    nap_button: nap_button
    recommend: recommend

    BoxLayout:
        orientation: "vertical"
        ActionBar:
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: "Nap"
                    with_previous: False
                ActionGroup:
                    ActionButton:
                        text: "Settings"
                        on_press: app.open_settings()
        Label:
            id: nap_label
            font_size: "140sp"
            text: nap_minutes.text + ":00"
    AnchorLayout:
        TextInput:
            size_hint: None, None
            height: "30dp"
            id: nap_minutes
            padding: [40, 5, 0, 0]
            text: "12"
            focus: True
            multiline: False
            on_text: root.track_time()
    BoxLayout:

        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        NapButton:
            id: nap_button
            text: "Time For A Nap"
            on_press: root.start_countdown()

        NapButton:
            id: recommend
            text: "Recommend Me A Nap"
            on_press: root.recommend_time()