Timer:

<Timer>:
    orientation: "vertical"
    nap_time: nap_minutes
    nap: nap_label
    nap_button: nap_button
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        Label:
            id: nap_label
            font_size: "140sp"
            text: nap_minutes.text + ":00"
    AnchorLayout:
        TextInput:
            size_hint: None, None
            height: "30dp"
            id: nap_minutes
            padding: [40, 5, 0, 0]
            text: "1"
            focus: True
            multiline: False
            on_text: root.track_time()
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        Button:
            id: nap_button
            width: "400dp"
            size_hint: None, None
            text: "Time For A Nap"
            background_normal: ""
            background_color: [0.24, 0.62, 1, 1]
            on_press: root.start_countdown()