#:kivy 1.9.1

TimerRoot:


<TimerRoot>:
    SetTimer

<SetTimer>:
    orientation: "vertical"
    nap_time: nap_minutes

    BoxLayout:
        Label:
            font_size: "140sp"
            text: "15:00"

    AnchorLayout:
        TextInput:
            size_hint: None, None
            height: "30dp"
            id: nap_minutes
            padding: [40, 5, 0, 0]
            text: "15"
            focus: True
            multiline: False
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        Button:
            width: "400dp"
            size_hint: None, None
            text: "Time For A Nap"
            on_press: app.root.startTimer()

<Countdown>:
    orientation: "vertical"
    BoxLayout:
        Label:
            text: "15:00"
            font_size: "150sp"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        Button:
            width: "300dp"
            size_hint: None, None
            text: "Cancel"
            on_press: app.root.setTimer()