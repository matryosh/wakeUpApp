#:kivy 1.9.1

TimerRoot:


<TimerRoot>:
    SetTimer

<SetTimer>:
    orientation: "vertical"
    nap_time: nap_minutes

    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        Label:
            font_size: "140sp"
            text: nap_minutes.text + ":00"
    AnchorLayout:
        TextInput:
            size_hint: None, None
            height: "30dp"
            id: nap_minutes
            padding: [40, 5, 0, 0]
            text: "15"
            focus: True
            multiline: False
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        Button:
            width: "400dp"
            size_hint: None, None
            text: "Time For A Nap"
            background_normal: ""
            background_color: [0.24, 0.62, 1, 1]
            on_press: root.countdown()